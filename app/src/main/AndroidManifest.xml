<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtingwi.chisoni.zakumunda">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Crop Prices"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PricesByCropActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".CompareMarketPricesActivity" />
        <activity android:name=".MarketPriceComparisonActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CompareMarketPricesActivity" />
        </activity>
        <activity android:name=".AboutActivity"></activity>
    </application>

</manifest>